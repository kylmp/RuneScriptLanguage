{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "dist",
        "lib": ["ES2020"],
        "sourceMap": false,
        "rootDir": "src",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "<node_internals>/**"
    ]
}
