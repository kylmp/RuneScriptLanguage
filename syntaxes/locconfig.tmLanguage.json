{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "locconfig",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#config"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line",
                    "match": "(//).*\\n?"
                },
                {
                    "name": "comment.block",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "config": {
            "patterns": [
                {
                    "comment": "[name]",
                    "name": "entity.name.function.locconfig",
                    "match": "\\[[A-Za-z0-9_+.:]+\\]"
                },
                {
                    "comment": "String values by property",
                    "match": "^(name|desc|op[1-5])=(.+)",
                    "captures": {
                        "1": {
                            "name": "entity.name.type.locconfig.key"
                        },
                        "2": {
                            "name": "string.unquoted.locconfig.value"
                        }
                    }
                },
                {
                    "comment": "Config properties",
                    "name": "entity.name.type.locconfig",
                    "match": "^(width|length|recol[1-6][sd]|wallwidth|ambient|contrast|mapfunction|resizex|resizey|resizez|mapscene|offsetx|offsety|offsetz|blockwalk|blockrange|active|hillskew|sharelight|occlude|hasalpha|mirror|shadow|forcedecor|breakroutefinding|raiseobject)(?==)"
                },
                {
                    "comment": "Numeric values",
                    "name": "constant.numeric.locconfig",
                    "match": "\\b\\d+\\b"
                },
                {
                    "comment": "Boolean values, part of property",
                    "name": "variable.language.locconfig",
                    "match": "\\b(?<==)(yes|no|true|false)\\b"
                },
                {
                    "comment": "Constants",
                    "name": "constant.language.locconfig",
                    "match": "\\b\\^\\w+\\b"
                },
                {
                    "comment": "Coord values",
                    "name": "constant.numeric.locconfig",
                    "match": "\\b(\\d+_){4}\\d+\\b"
                },
                {
                    "comment": "Reference values",
                    "match": "^(model|category|anim|retex[1-6][sd]|multivar|model\\d)=(.+)",
                    "captures": {
                        "1": {
                            "name": "entity.name.type.locconfig.key"
                        },
                        "2": {
                            "name": "variable.name.locconfig.value"
                        }
                    }
                },
                {
                    "comment": "Param values",
                    "match": "^(param)=(.+),(.+)",
                    "captures": {
                        "1": {
                            "name": "entity.name.type.locconfig.key"
                        },
                        "2": {
                            "name": "variable.name.locconfig.value"
                        },
                        "3": {
                            "name": "constant.numeric.locconfig"
                        }
                    }
                },
                {
                    "comment": "Location forceapproach values",
                    "match": "^(forceapproach)=(north|east|south|west)?",
                    "captures": {
                        "1": {
                            "name": "entity.name.type.locconfig.key"
                        },
                        "2": {
                            "name": "variable.language.locconfig"
                        }
                    }
                },
                {
                    "comment": "Location multiloc values",
                    "match": "^(multiloc)=(.+),(.+)",
                    "captures": {
                        "1": {
                            "name": "entity.name.type.locconfig.key"
                        },
                        "2": {
                            "name": "constant.numeric.value"
                        },
                        "3": {
                            "name": "variable.name.locconfig.value"
                        }
                    }
                },
                {
                    "comment": "Location freshly unpacked model values",
                    "match": "^(unpacked_\\d|unpacked2_\\d)=(.+),(.+)",
                    "captures": {
                        "1": {
                            "name": "entity.name.type.locconfig.key"
                        },
                        "2": {
                            "name": "variable.name.locconfig.value"
                        },
                        "3": {
                            "name": "constant.numeric.value"
                        }
                    }
                }
            ]
        }
    },
    "scopeName": "source.locconfig"
}